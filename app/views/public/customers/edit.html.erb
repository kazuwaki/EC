 <div class="container">
  <div class="row">
    <div class="col-4">
      <h1>会員情報編集</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <%= form_with model: @customer,url: customers_path, method: :patch, local: false do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td class="table-active" style = "width: 30%">氏名</td>
              <td><%=f.text_field :last_name %><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td class = "table-active">カナ</td>
              <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td class = "table-active">郵便番号</td>
              <td><%=f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td class = "table-active">住所</td>
              <td><%= f.text_field :address, style: "width: 100%" %></td>
            </tr>
            <tr>
              <td class = "table-active">電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td class = "table-active">メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %>
                <%= link_to "退会する", confirmation_customers_path, class: "btn btn-danger" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>