<div class="container">
  <div class="row">
    <div class="col-4 mb-4">
      <h1>マイページ</h1><br><%= link_to "編集する", edit_customers_path, class: "btn btn-success" %>
    </div>
  </div>
    <div class="row">
      <div class="col-8">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="table-active" style = "width: 30%">氏名</td>
              <td><%= @customer.last_name + @customer.first_name %></td>
            </tr>
            <tr>
              <td class = "table-active">カナ</td>
              <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td class = "table-active">郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td class = "table-active">住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td class = "table-active">電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td class = "table-active">メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
     <div class = "row">
    <div class = "col-lg-7 mb-3">
      <p>
        配送先
        <%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary ml-5", style: "width: 20%" %>
      </p>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-7 mb-3">
      <p>
        注文履歴
        <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary ml-4", style: "width: 20%" %>
      </p>
    </div>
  </div>
</div>
