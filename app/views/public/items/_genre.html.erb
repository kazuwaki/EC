<table class="table">
  <thead>
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, genre_search_items_path(genre_id: genre.id), class: "btn btn-info btn-lg" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>