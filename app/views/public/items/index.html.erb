<div class="container">
  <div class="row">
    <div class="col-2">
      <h3>ジャンル検索</h3>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
    <div class="col-10">
      <h1>商品一覧</h1>
      <div class="d-flex flex-wrap justify-content-around">
        <% @items.each do |item| %>
          <%= link_to item_path(item), class:"card mb-3 shadow" do %>
            <%= image_tag item.get_image(200,200), class:"card-img-top" %>
          <div class="card-body">
          <p class="card-title"><%= item.name %></p>
          <p class="card-text"><%= item.price %>円</p>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>