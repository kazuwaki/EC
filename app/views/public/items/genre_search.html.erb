<div class="container mt-4">
  <div class="row">
    <div class="col-2">
      <div class="mt-5">
        <h5>ジャンル</h5>
      </div>
      <hr style="border-bottom:double">
      <div>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, genre_search_items_path(genre_id: genre.id), class:"btn btn-info btn-sm rounded-pill mb-2" %> <br>
        <% end %>
      </div>
      </div>
      <div class="col-10">
        <h2 class="text-center">ジャンル検索結果 "<%= @genre_name %>"</h2>
        <h5 class=" text-center mb-5">検索結果は<%= @items.count %>件です。</h5>
        <div class="d-flex flex-wrap justify-content-around">
          <% @items.each do |item| %>
            <%= link_to item_path(item), class:"card mb-3 shadow", style:"padding: 0; height:350px; width: 200px" do %>
            <%= image_tag item.get_image(500,500), class:"card-img-top", alt:"Card image cap", style:"height:150px; width:auto; object-fit: cover" %>
            <div class="card-body", style="color:black; background-color:#F5F2EC">
              <h5 class="card-title" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden; max-width:160px"><%= item.name %></h5>
                <p class="card-text" style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden; max-width:160px"><%= item.introduction %></p>
                <p class="card-text">¥<%= item.price.to_s(:delimited) %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>