<h1>配送先一覧/登録</h1>
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<table class="table">
  <tbody>
    <tr>
      <td>郵便番号(ハイフン無し)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= f.submit "新規登録" %>
</div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %><%= link_to "削除", address_path(address.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>