<h1>Public::Addresses#edit</h1>
<%= form_with model: @address, url: address_path, method: :patch do |f| %>
<table class="table">
  <tbody>
    <tr>
      <td>郵便番号(ハイフン無し)</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name %></td>
    </tr>
  </tbody>
</table>
<div>
  <%= f.submit "変更内容を保存" %>
</div>
<% end %>
