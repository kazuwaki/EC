<h1>会員一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メール</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
          <%= customer.last_name %><%= customer.first_name %>
        <% end %>
        </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted %>
          <p>退会</p>
        <% else %>
          <p>有効</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>